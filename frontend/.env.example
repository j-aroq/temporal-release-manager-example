# Temporal Release Management System - Frontend Configuration
# Copy this file to .env and update values for your environment

# ============================================================================
# API Configuration
# ============================================================================
# Backend API base URL
# Local development: http://localhost:8000/api
# Production: https://api.your-domain.com/api
REACT_APP_API_URL=http://localhost:8000/api

# ============================================================================
# Feature Flags
# ============================================================================
# Enable real-time polling for updates
REACT_APP_ENABLE_POLLING=true

# Polling interval in milliseconds (default: 3000 = 3 seconds)
REACT_APP_POLLING_INTERVAL=3000

# ============================================================================
# Development Configuration
# ============================================================================
# Enable debug logging in browser console
REACT_APP_DEBUG=false

# ============================================================================
# Production Configuration (override in production .env)
# ============================================================================
# In production, set these values:
# REACT_APP_API_URL=https://api.your-production-domain.com/api
# REACT_APP_DEBUG=false
