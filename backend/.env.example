# Temporal Release Management System - Backend Configuration
# Copy this file to .env and update values for your environment

# ============================================================================
# Temporal Configuration
# ============================================================================
# Temporal server address (local development default)
TEMPORAL_HOST=localhost:7233

# Temporal namespace (use 'default' for local development)
TEMPORAL_NAMESPACE=default

# ============================================================================
# Security Configuration
# ============================================================================
# JWT secret for signing tokens (REQUIRED - change this!)
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET=your-secret-key-change-this-in-production

# JWT token expiration time in minutes (default: 30 minutes)
JWT_EXPIRE_MINUTES=30

# JWT algorithm (default: HS256)
JWT_ALGORITHM=HS256

# ============================================================================
# API Configuration
# ============================================================================
# Allowed CORS origins (comma-separated list)
# For local development, use frontend URL
API_CORS_ORIGINS=["http://localhost:3000"]

# API host and port
API_HOST=0.0.0.0
API_PORT=8000

# API prefix (default: /api)
API_PREFIX=/api

# ============================================================================
# Logging Configuration
# ============================================================================
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log format: json or text
LOG_FORMAT=json

# ============================================================================
# Development Configuration
# ============================================================================
# Enable debug mode (detailed error messages, auto-reload)
DEBUG=false

# Enable API documentation endpoints (/docs, /redoc)
ENABLE_DOCS=true

# ============================================================================
# Production Configuration (override in production .env)
# ============================================================================
# In production, set these values:
# JWT_SECRET=<secure-random-string>
# API_CORS_ORIGINS=["https://your-production-domain.com"]
# DEBUG=false
# LOG_LEVEL=INFO
# TEMPORAL_HOST=<production-temporal-host>
